{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { 
      "src": "/(.*\\.(css|js|png|jpg|svg))", 
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}